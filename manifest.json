{
  "manifest_version": 2,
  "name": "Spoon Chat",
  "short_name": "Spoon Chat",
  "version": "0.0.1",
  "description": "Incredible Spoon Powered Chat Client",
  "author": "Eoin,Conor,Peter",
  "homepage_url": "https://github.com/22a/solid-spoon",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/browsericons/icon19.png",
      "38": "img/browsericons/icon38.png"
    },
    "default_title": "Spoon Chat",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ]
}
